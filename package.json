{
  "name": "towertamer",
  "private": true,
  "version": "1.0.0",
  "description": "Tower Tamer RPG - Mobile-first web-based RPG game",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "pm2 start ecosystem.config.js",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:backend": "yarn workspace @towertamer/backend dev",
    "dev:stop": "pm2 stop ecosystem.config.js",
    "dev:restart": "pm2 restart ecosystem.config.js",
    "dev:logs": "pm2 logs",
    "dev:status": "pm2 list",
    "build": "yarn workspaces run build",
    "build:frontend": "yarn workspace frontend build",
    "build:backend": "yarn workspace @towertamer/backend build",
    "test": "yarn workspace frontend test",
    "test:frontend": "yarn workspace frontend test",
    "lint": "yarn workspaces run lint",
    "lint:frontend": "yarn workspace frontend lint",
    "lint:backend": "yarn workspace @towertamer/backend lint"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
